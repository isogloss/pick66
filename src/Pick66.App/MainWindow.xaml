<Window x:Class="Pick66.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pick66.App.Converters"
        mc:Ignorable="d"
        Title="Pick66 - Lottery Number Generator" 
        Height="500" Width="800"
        Background="#000000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <!-- Main Grid -->
    <Grid>
        <!-- Busy Overlay -->
        <Grid Background="#AA000000" Panel.ZIndex="999">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBusy}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding BusyMessage}" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#FFFFFF" 
                           HorizontalAlignment="Center" />
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4" 
                             Margin="0,10,0,0"
                             Background="#222222"
                             Foreground="#FFFFFF" />
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Border BorderBrush="#444444" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Input Controls -->
                <Border Grid.Column="0" Background="#000000" BorderBrush="#444444" BorderThickness="0,0,1,0">
                    <StackPanel Margin="20">
                        <!-- Title -->
                        <TextBlock Text="PICK66" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#FFFFFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,20"/>

                        <!-- Ticket Count -->
                        <Label Content="Ticket Count:" />
                        <TextBox Text="{Binding TicketCount, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,15"/>

                        <!-- Numbers Per Ticket -->
                        <Label Content="Numbers Per Ticket:" />
                        <TextBox Text="{Binding NumbersPerTicket, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,15"/>

                        <!-- Min Number -->
                        <Label Content="Minimum Number:" />
                        <TextBox Text="{Binding MinInclusive, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,15"/>

                        <!-- Max Number -->
                        <Label Content="Maximum Number:" />
                        <TextBox Text="{Binding MaxInclusive, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,15"/>

                        <!-- Unique Toggle -->
                        <CheckBox Content="Unique Numbers Only" 
                                  IsChecked="{Binding Unique}" 
                                  Margin="0,0,0,25"/>

                        <!-- Generate Button -->
                        <Button Content="GENERATE" 
                                Command="{Binding GenerateCommand}"
                                IsEnabled="{Binding CanGenerate}"
                                Height="40" 
                                FontSize="14" 
                                FontWeight="Bold"
                                Margin="0,0,0,10"/>

                        <!-- Clear Button -->
                        <Button Content="Clear Results" 
                                Command="{Binding ClearCommand}"
                                Height="30"/>

                        <!-- Close Button -->
                        <Button Content="CLOSE" 
                                Click="CloseButton_Click"
                                Height="30"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Right Panel - Results -->
                <Grid Grid.Column="1" Background="#000000">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Results Header -->
                    <Border Grid.Row="0" Background="#111111" BorderBrush="#444444" BorderThickness="0,0,0,1">
                        <TextBlock Text="GENERATED TICKETS" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#FFFFFF" 
                                   Padding="20,10"/>
                    </Border>

                    <!-- Results List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Tickets}"
                             Margin="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="#000000"
                             BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Padding" Value="20,8"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#222222"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#444444"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#222222"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <!-- Empty State -->
                    <TextBlock Grid.Row="1" 
                               Text="Click GENERATE to create lottery tickets" 
                               FontSize="14" 
                               Foreground="#666666"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="{Binding Tickets.Count, Converter={x:Static local:CountToVisibilityConverter.Instance}}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>