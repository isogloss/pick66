<Window x:Class="Pick66.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pick66.App.Converters"
        mc:Ignorable="d"
        Title="Pick66 - Projection Interface" 
        Height="600" Width="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <!-- Main Grid -->
    <Grid>
        <!-- Main Content -->
        <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="{StaticResource PanelBrush}" CornerRadius="8,8,0,0">
                    <Grid Margin="20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="PICK66" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}" />
                            <TextBlock Text="Projection Interface" 
                                       FontSize="14" 
                                       Foreground="#9CA3AF" 
                                       Margin="12,0,0,0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="âœ•" 
                                Click="CloseButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Width="32" Height="32" 
                                Padding="0"
                                FontSize="16"
                                ToolTip="Close Application"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Control Panel -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource PanelBrush}" 
                            CornerRadius="8" 
                            Padding="24" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="1">
                        <StackPanel>
                            <!-- Projection Status -->
                            <TextBlock Text="Projection Status" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" 
                                       Margin="0,0,0,16"/>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Ellipse Grid.Column="0" Style="{StaticResource StatusIndicatorStyle}" 
                                         VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding StatusText}" 
                                           FontSize="14" FontWeight="Medium" 
                                           Foreground="{StaticResource TextBrush}" 
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Status Message -->
                            <TextBlock Text="{Binding StatusMessage}" 
                                       FontSize="12" 
                                       Foreground="#9CA3AF" 
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,24"/>

                            <!-- Control Buttons -->
                            <Button Content="Start Projection" 
                                    Command="{Binding StartProjectionCommand}"
                                    Style="{StaticResource ProjectionButtonStyle}"
                                    Height="44" 
                                    FontSize="14"
                                    Margin="0,0,0,12"/>

                            <Button Content="Stop Projection" 
                                    Command="{Binding StopProjectionCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Height="36" 
                                    FontSize="13"
                                    Margin="0,0,0,24"/>

                            <!-- Separator -->
                            <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,0,0,20"/>

                            <!-- System Information -->
                            <TextBlock Text="System Information" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextBrush}" 
                                       Margin="0,0,0,12"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Status:" 
                                           FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Grid.Column="1" Text="{Binding ProjectionStatus}" 
                                           FontSize="12" Foreground="{StaticResource TextBrush}"/>
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Version:" 
                                           FontSize="12" Foreground="#9CA3AF"/>
                                <TextBlock Grid.Column="1" Text="1.0.0" 
                                           FontSize="12" Foreground="{StaticResource TextBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Right Panel - Activity Log -->
                    <Border Grid.Column="1" 
                            Background="{StaticResource PanelBrush}" 
                            CornerRadius="8" 
                            Margin="16,0,0,0" 
                            BorderBrush="{StaticResource BorderBrush}" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Log Header -->
                            <Grid Grid.Row="0" Margin="24,20,24,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="Activity Log" 
                                           FontSize="16" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextBrush}"/>
                                
                                <Button Grid.Column="1" Content="Clear" 
                                        Command="{Binding ClearLogsCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Height="28" Padding="12,4" FontSize="11"/>
                            </Grid>

                            <!-- Log Content -->
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding LogMessages}"
                                     Margin="24,0,24,0"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas, Monaco, monospace"
                                     FontSize="11">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#D1D5DB"/>
                                        <Setter Property="Padding" Value="8,3"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>

                            <!-- Empty State -->
                            <TextBlock Grid.Row="1" 
                                       Text="No activity to display" 
                                       FontSize="14" 
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding LogMessages.Count, Converter={x:Static local:CountToVisibilityConverter.Instance}}"/>

                            <!-- Footer -->
                            <Border Grid.Row="2" Height="16"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>